---
const navLinks = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Articles", href: "/articles" },
  { name: "Contact", href: "/contact" },
];
---

<header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 shadow-sm border-b border-gray-100">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 text-green-600 font-bold text-xl hover:opacity-90 transition">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7 text-green-600">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v18m9-9H3" />
      </svg>
      GreenBytes
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex gap-6 text-gray-700 font-medium">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="hover:text-green-600 transition-colors"
        >
          {link.name}
        </a>
      ))}
    </nav>

    <!-- Dark mode toggle -->
    <button
      class="ml-4 hidden md:block text-gray-500 hover:text-green-600 transition"
      title="Toggle Theme"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
        stroke-width="2" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M12 3v1m0 16v1m8.485-8.485h1M3.515 12.515h1M16.95 7.05l.707-.707M6.343 17.657l.707-.707M16.95 16.95l.707.707M6.343 6.343l.707.707M21 12a9 9 0 11-9-9" />
      </svg>
    </button>

    <!-- Mobile menu button -->
    <button id="menuButton" class="md:hidden text-gray-600 hover:text-green-600 focus:outline-none transition">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
        stroke-width="2" stroke="currentColor" class="w-7 h-7">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobileMenu" class="md:hidden hidden flex flex-col space-y-2 bg-white border-t border-gray-100 px-6 py-4">
    {navLinks.map(link => (
      <a href={link.href} class="text-gray-700 hover:text-green-600 transition">
        {link.name}
      </a>
    ))}
  </div>

  <script>
    const btn = document.getElementById("menuButton");
    const menu = document.getElementById("mobileMenu");
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  </script>
</header>
