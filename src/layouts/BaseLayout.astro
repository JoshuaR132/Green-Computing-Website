---
// BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/input.css';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GreenBytes</title>
    <!-- Tailwind CSS already included in your project -->
  </head>
  <body class="bg-white text-gray-800 dark:bg-gray-950 dark:text-gray-100 transition-colors duration-300">
    <!-- Set initial theme before page renders to avoid flash -->
    <script is:inline>
      const html = document.documentElement;
      const storedTheme = localStorage.getItem('theme');
      if (storedTheme === 'dark' || (!storedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        html.classList.add('dark');
      }
    </script>

    <!-- Header must hydrate on client to attach toggle -->
    <Header client:load />
    <main class="p-6 max-w-4xl mx-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
