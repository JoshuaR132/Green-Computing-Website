---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout>
  <section class="max-w-5xl mx-auto px-6 py-16">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-green-600 mb-4">Contact Us</h1>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        We’d love to hear from you! Whether you have article ideas, feedback, or just want to share your thoughts about green computing — we’re all ears 🌿
      </p>
    </div>

    <!-- Contact Form Section -->
    <div class="bg-white shadow-md rounded-2xl border border-gray-100 p-8 md:p-10 max-w-2xl mx-auto">
      <form class="space-y-6">
        <!-- Name -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Your full name"
            required
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="your@email.com"
            required
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        </div>

        <!-- Message -->
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            placeholder="Type your message here..."
            required
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2.5 rounded-lg transition"
        >
          Send Message
        </button>
      </form>
    </div>

    <!-- Additional Contact Info -->
    <div class="text-center mt-12 text-gray-600">
      <p class="mb-2">Or reach out directly via:</p>
      <div class="flex justify-center gap-6 text-green-600 text-lg">
        <a href="mailto:contact@greenbytes.com" class="hover:text-green-700 flex items-center gap-2">
          ✉️ <span>Email Us</span>
        </a>
        <a href="https://twitter.com" target="_blank" class="hover:text-green-700 flex items-center gap-2">
          🐦 <span>Twitter</span>
        </a>
        <a href="https://github.com" target="_blank" class="hover:text-green-700 flex items-center gap-2">
          💻 <span>GitHub</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
