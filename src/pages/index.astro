---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <!-- Hero Section -->
  <section class="bg-green-600 dark:bg-green-700 text-white py-20 px-4 text-center transition-colors duration-300">
    <h1 class="text-4xl md:text-6xl font-bold mb-4">Welcome to <span class="text-green-200 dark:text-green-100">GreenBytes</span></h1>
    <p class="text-lg md:text-2xl mb-6 opacity-90">Your guide to eco-friendly computing habits.</p>
    <a 
      href="/articles" 
      class="bg-white text-green-700 dark:bg-green-200 dark:text-green-900 font-semibold px-6 py-3 rounded-full shadow hover:shadow-lg hover:scale-105 transition-transform duration-300"
    >
      ðŸŒ± Read Articles
    </a>
  </section>

  <!-- Article Cards Section -->
  <section class="py-16 px-4 max-w-6xl mx-auto transition-colors duration-300">
    <h2 class="text-3xl font-bold mb-10 text-center text-gray-800 dark:text-gray-100">Green Computing Tips</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {[
        {
          title: "Save Energy",
          desc: "Enable dark mode, reduce screen brightness, and turn off unused devices."
        },
        {
          title: "Recycle Electronics",
          desc: "Donate or recycle old electronics responsibly to reduce e-waste."
        },
        {
          title: "Optimize Code",
          desc: "Efficient software uses less energy â€” write clean, performant code."
        },
        {
          title: "Cloud Sustainability",
          desc: "Choose green hosting and cloud providers that use renewable energy."
        },
        {
          title: "Responsible Printing",
          desc: "Print only when necessary and use recycled paper or double-sided printing."
        },
        {
          title: "Upgrade Thoughtfully",
          desc: "Extend device life with upgrades instead of replacing hardware unnecessarily."
        }
      ].map(card => (
        <div class="border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
          <h3 class="font-bold text-xl mb-2 text-green-700 dark:text-green-400">{card.title}</h3>
          <p class="text-gray-600 dark:text-gray-300">{card.desc}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 px-4 bg-gray-50 dark:bg-gray-900 max-w-4xl mx-auto text-center transition-colors duration-300 rounded-lg shadow-inner">
    <h2 class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-100">About GreenBytes</h2>
    <p class="text-lg mb-4 text-gray-700 dark:text-gray-300">
      <span class="font-semibold text-green-700 dark:text-green-400">GreenBytes</span> is dedicated to spreading awareness about sustainable computing. 
      We cover topics such as energy-efficient hardware, green web design, and responsible recycling.
    </p>
    <p class="text-lg text-gray-700 dark:text-gray-300">
      Our mission is to help you make small changes that have a <span class="text-green-600 dark:text-green-400 font-medium">big environmental impact</span>.
    </p>
  </section>
</BaseLayout>
